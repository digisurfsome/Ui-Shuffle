{
  "manifest_version": 3,
  "name": "UI Mockup Tool",
  "version": "1.0.0",
  "description": "Screenshot any page, select UI chunks, drag them around to create layout mockups",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "capture-page": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Capture current page for mockup"
    }
  }
}
